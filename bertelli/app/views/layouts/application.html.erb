<!DOCTYPE html>
<html>
<head>
  <title>Bertelli</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">

	<div id="wrapper">
		

		<div id="main">
		
			<div id="centeredtabs">
			  <%= tabs_tag :open_tabs => { :id=>"tabs" } do |tab| %>
					<%= tab.home 'Home', home_path %>
					<%= tab.search 'Add Interests', search_path %>
					<%= tab.recommendations 'Recommendations', recommendations_path %>
			  <% end %>	
		  </div>
		
			<%= yield %>
		</div>
		
	</div>

</body>
</html>
